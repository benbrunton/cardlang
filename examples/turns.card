name turns
set deck as StandardDeck
set players as Players(2)
set current_player as 1

stack middle

define setup(){
    reset deck
    reset players
    reset current_player
    clear middle
    deck > players alt end
}

define player_move(move, player){
    check player id is current_player
    player hand > middle

    if(count(player hand) is 0){
        winner(player id)
        end()
    }

    rotate_players()
}